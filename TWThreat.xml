                            <Offset>
                                <AbsDimension x="-11" y="13"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="BORDER">
                <Texture name="$parentNumericBG" hidden="true"
