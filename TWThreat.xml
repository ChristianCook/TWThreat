                    <Size>
                        <AbsDimension x="64" y="32"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="38" y="-3"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
                <FontString name="$parentPerc"  hidden="true"
                            inherits="GameFontHighlightSmall" text="87%">
                    <Size>
                        <AbsDimension x="64" y="32"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="31" y="3"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>

</Ui>
