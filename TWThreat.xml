<Ui xmlns="http://www.blizzard.com/wow/ui/" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.blizzard.com/wow/ui/..\FrameXML\UI.xsd">
    <Script file="TWThreat.lua"/>

    <Frame name="TWThreat" virtual="true">
        <Size>
            <AbsDimension x="298" y="19"/>
        </Size>
        <Anchors>
            <Anchor point="TOPLEFT">
                <Offset>
                    <AbsDimension x="1" y="0"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture name="$parentBG" file="Interface\addons\TWThreat\images\textures\Smooth">
                    <Size>
                        <AbsDimension x="298" y="18"/>
                    </Size>
                    <TexCoords left="1" right="0" top="0.1" bottom="1"/>
                    <Anchors>
                        <Anchor point="LEFT">
                            <Offset>
                                <AbsDimension x="1" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <FontString name="$parentName" inherits="GameFontHighlight" text="Smultron"
                            justifyH="LEFT">
                    <Size>
                        <AbsDimension x="100" y="20"/>
                    </Size>
                    <Anchors>
                        <Anchor point="LEFT">
                            <Offset>
                                <AbsDimension x="5" y="-1"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString name="$parentTPS" inherits="GameFontHighlightSmall" text="TPS"
                            justifyH="RIGHT">
                    <Size>
                        <AbsDimension x="60" y="20"/>
                    </Size>
                    <Anchors>
                        <Anchor point="LEFT" relativeTo="$parentName" relativePoint="RIGHT">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString name="$parentThreat" inherits="GameFontHighlightSmall" text="threat"
                            justifyH="RIGHT">
                    <Size>
                        <AbsDimension x="60" y="20"/>
                    </Size>
                    <Anchors>
                        <Anchor point="LEFT" relativeTo="$parentTPS" relativePoint="RIGHT">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString name="$parentPerc" inherits="GameFontHighlightSmall" text="perc" justifyH="RIGHT">
                    <Size>
                        <AbsDimension x="60" y="20"/>
                    </Size>
                    <Anchors>
                        <Anchor point="LEFT" relativeTo="$parentThreat" relativePoint="RIGHT">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>

                <Texture name="$parentArrowUp" file="interface\buttons\ui-sortarrow" hidden="true">
                    <Size>
                        <AbsDimension x="16" y="8"/>
                    </Size>
                    <TexCoords left="1" right="0" top="1" bottom="0"/>
                    <Anchors>
                        <Anchor point="RIGHT" relativeTo="$parentThreat">
                            <Offset>
                                <AbsDimension x="11" y="2"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>

                <Texture name="$parentArrowDown" file="interface\buttons\ui-sortarrow" hidden="true">
                    <Size>
                        <AbsDimension x="16" y="8"/>
                    </Size>
                    <Anchors>
                        <Anchor point="RIGHT" relativeTo="$parentThreat">
                            <Offset>
                                <AbsDimension x="18" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>


            </Layer>
        </Layers>
    </Frame>

    <Frame name="TWTMain" hidden="false" toplevel="true"
           parent="UIParent" movable="true" enableMouse="true" resizable="true">
        <Size>
            <AbsDimension x="300" y="200"/>
        </Size>
        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background"
                  tile="false">
        </Backdrop>
        <ResizeBounds>
            <minResize x="300" y="160"/>
            <maxResize x="300" y="400"/>
        </ResizeBounds>
        <Anchors>
            <Anchor point="CENTER">
                <Offset>
                    <AbsDimension x="0" y="0"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Layers>
            <Layer level="ARTWORK">
                <Texture name="$parentTitleBG" file="Interface\addons\TWThreat\images\textures\Smooth">
                    <Size>
                        <AbsDimension x="298" y="20"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="1" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="OVERLAY">
                <FontString name="$parentTitle" inherits="GameFontHighlight" text="Name">
                    <Size>
                        <AbsDimension x="300" y="20"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOP">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString name="$parentName" inherits="GameFontHighlightSmall" text="Name"
                            justifyH="LEFT">
                    <Size>
                        <AbsDimension x="100" y="20"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="5" y="-20"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString name="$parentTPS" inherits="GameFontHighlightSmall" text="TPS"
                            justifyH="RIGHT">
                    <Size>
                        <AbsDimension x="60" y="20"/>
                    </Size>
                    <Anchors>
                        <Anchor point="LEFT" relativeTo="$parentName" relativePoint="RIGHT">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString name="$parentThreat" inherits="GameFontHighlightSmall" text="Threat"
                            justifyH="RIGHT">
                    <Size>
                        <AbsDimension x="60" y="20"/>
                    </Size>
                    <Anchors>
                        <Anchor point="LEFT" relativeTo="$parentTPS" relativePoint="RIGHT">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString name="$parentPerc" inherits="GameFontHighlightSmall" text="%" justifyH="RIGHT">
                    <Size>
                        <AbsDimension x="60" y="20"/>
                    </Size>
                    <Anchors>
                        <Anchor point="LEFT" relativeTo="$parentThreat" relativePoint="RIGHT">
                            <Offset>
                                <AbsDimension x="0" y="0"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
                <FontString name="$parentThreatTarget" inherits="GameFontHighlight" text="Threat:">
                    <Size>
                        <AbsDimension x="300" y="20"/>
                    </Size>
                    <Anchors>
                        <Anchor point="BOTTOM">
                            <Offset>
                                <AbsDimension x="0" y="1"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
        <Scripts>
            <OnLoad>
                this:RegisterForDrag("LeftButton");
                this:SetMovable(1);
                this:SetUserPlaced(true);
            </OnLoad>
            <OnDragStart>
                this:StartMoving();
                this.isMoving = true;
            </OnDragStart>
            <OnDragStop>
                this:StopMovingOrSizing();
                this.isMoving = false;
            </OnDragStop>
        </Scripts>
        <Frames>

            <Button name="$parentSettingsButton" inherits="UIPanelButtonTemplate" text="S">
                <NormalTexture name="$parentNT" file="Interface\addons\TWThreat\images\textures\Smooth" alphaMode="ADD">
                </NormalTexture>
                <PushedTexture name="$parentPT" file="Interface\addons\TWThreat\images\textures\Smooth"/>
                <HighlightTexture/>
                <Size>
                    <AbsDimension x="16" y="16"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset>
                            <AbsDimension x="3" y="-2"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        getglobal('TWTMainSettings'):Show()
                    </OnClick>
                </Scripts>
            </Button>

            <Button name="$parentCloseButton" inherits="UIPanelButtonTemplate" text="X">
                <NormalTexture name="$parentNT" file="Interface\addons\TWThreat\images\textures\Smooth" alphaMode="ADD">
                </NormalTexture>
                <PushedTexture name="$parentPT" file="Interface\addons\TWThreat\images\textures\Smooth"/>
                <HighlightTexture/>
                <Size>
                    <AbsDimension x="16" y="16"/>
                </Size>
                <Anchors>
                    <Anchor point="TOPRIGHT">
                        <Offset>
                            <AbsDimension x="-3" y="-2"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnClick>
                        TWTCloseButton_OnClick()
                    </OnClick>
                </Scripts>
            </Button>

            <Button name="TWTResizeButton">
                <NormalTexture file="Interface\AddOns\TWThreat\images\ResizeGrip"/>
                <HighlightTexture file="Interface\AddOns\TWThreat\images\ResizeGrip" alphaMode="ADD"/>
                <Size>
                    <AbsDimension x="16" y="16"/>
                </Size>
                <Anchors>
                    <Anchor point="BOTTOMRIGHT">
                        <Offset>
                            <AbsDimension x="0" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                    <OnMouseDown>
                        TWTMain:StartSizing("BOTTOMRIGHT")
                        TWTMain:SetUserPlaced(true)
                        TWTMainWindow_Resizing()
                    </OnMouseDown>
                    <OnMouseUp>
                        TWTMain:StopMovingOrSizing()
                        TWTMainMainWindow_Resized()
                    </OnMouseUp>
                    <OnClick>
                    </OnClick>
                </Scripts>
            </Button>

            <ScrollFrame name="TWThreatListScrollFrame" hidden="false" inherits="UIPanelScrollFrameTemplate">
                <Size>
                    <AbsDimension x="298" y="200"/>
                </Size>
                <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background"
                          tile="false">
                </Backdrop>
                <Anchors>
                    <Anchor point="TOPLEFT">
                        <Offset>
                            <AbsDimension x="1" y="-40"/>
                        </Offset>
                    </Anchor>
                    <Anchor point="BOTTOMRIGHT">
                        <Offset>
                            <AbsDimension x="-1" y="20"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Scripts>
                </Scripts>
                <ScrollChild>
                    <Frame name="TWThreatListScrollFrameChildren">
                        <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background2"
                                  tile="false">
                        </Backdrop>
                        <Size>
                            <AbsDimension x="298" y="200"/>
                        </Size>
                        <Anchors>
                            <Anchor point="TOPLEFT">
                                <Offset>
                                    <AbsDimension x="1" y="0"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Frames>
                        </Frames>
                    </Frame>

                </ScrollChild>
            </ScrollFrame>

            <Frame name="$parentSettings" hidden="true" toplevel="true"
                   movable="true" enableMouse="true">
                <Size>
                    <AbsDimension x="300" y="200"/>
                </Size>
                <Backdrop bgFile="Interface\DialogFrame\UI-DialogBox-Background"
                          tile="false">
                </Backdrop>
                <Anchors>
                    <Anchor point="CENTER" relativeTo="UIParent">
                        <Offset>
                            <AbsDimension x="0" y="0"/>
                        </Offset>
                    </Anchor>
                </Anchors>
                <Layers>
                    <Layer level="ARTWORK">
                        <Texture name="$parentTitleBG" file="Interface\addons\TWThreat\images\textures\Smooth">
                            <Size>
                                <AbsDimension x="298" y="20"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOPLEFT">
                                    <Offset>
                                        <AbsDimension x="1" y="0"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </Texture>
                    </Layer>
                    <Layer level="OVERLAY">
                        <FontString name="$parentTitle" inherits="GameFontHighlight" text="Settings">
                            <Size>
                                <AbsDimension x="300" y="20"/>
                            </Size>
                            <Anchors>
                                <Anchor point="TOP">
                                    <Offset>
                                        <AbsDimension x="0" y="0"/>
                                    </Offset>
                                </Anchor>
                            </Anchors>
                        </FontString>
                    </Layer>
                </Layers>
                <Frames>

                    <Button name="$parentCloseButton" inherits="UIPanelCloseButton">
                        <Anchors>
                            <Anchor point="TOPRIGHT">
                                <Offset>
                                    <AbsDimension x="0" y="0"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                    </Button>

                    <CheckButton name="$parentTargetFrameGlow" hidden="false">
                        <Size>
                            <AbsDimension x="20" y="20"/>
                        </Size>
                        <Anchors>
                            <Anchor point="TOPLEFT">
                                <Offset>
                                    <AbsDimension x="10" y="-30"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Layers>
                            <Layer level="ARTWORK">
                                <FontString name="$parentLabel" inherits="GameFontNormal"
                                            text="Target Frame Glow (default UI)">
                                    <Anchors>
                                        <Anchor point="LEFT" relativePoint="RIGHT">
                                            <Offset>
                                                <AbsDimension x="1" y="1"/>
                                            </Offset>
                                        </Anchor>
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                        <Frames>
                        </Frames>
                        <Scripts>
                            <OnClick>
                                TWTChangeSetting_OnClick(this:GetName(), this:GetChecked(), 'glow')
                            </OnClick>
                        </Scripts>
                        <NormalTexture file="Interface\Buttons\UI-CheckBox-Up"/>
                        <PushedTexture file="Interface\Buttons\UI-CheckBox-Down"/>
                        <HighlightTexture file="Interface\Buttons\UI-CheckBox-Highlight" alphaMode="ADD"/>
                        <CheckedTexture file="Interface\Buttons\UI-CheckBox-Check"/>
                        <DisabledCheckedTexture file="Interface\Buttons\UI-CheckBox-Check-Disabled"/>
                    </CheckButton>

                    <CheckButton name="$parentPercNumbers" hidden="false">
                        <Size>
                            <AbsDimension x="20" y="20"/>
                        </Size>
                        <Anchors>
                            <Anchor point="TOPLEFT">
                                <Offset>
                                    <AbsDimension x="10" y="-50"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Layers>
                            <Layer level="ARTWORK">
                                <FontString name="$parentLabel" inherits="GameFontNormal"
                                            text="Target Frame Threat Percentage (default UI)">
                                    <Anchors>
                                        <Anchor point="LEFT" relativePoint="RIGHT">
                                            <Offset>
                                                <AbsDimension x="1" y="1"/>
                                            </Offset>
                                        </Anchor>
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                        <Frames>
                        </Frames>
                        <Scripts>
                            <OnClick>
                                TWTChangeSetting_OnClick(this:GetName(), this:GetChecked(), 'perc')
                            </OnClick>
                        </Scripts>
                        <NormalTexture file="Interface\Buttons\UI-CheckBox-Up"/>
                        <PushedTexture file="Interface\Buttons\UI-CheckBox-Down"/>
                        <HighlightTexture file="Interface\Buttons\UI-CheckBox-Highlight" alphaMode="ADD"/>
                        <CheckedTexture file="Interface\Buttons\UI-CheckBox-Check"/>
                        <DisabledCheckedTexture file="Interface\Buttons\UI-CheckBox-Check-Disabled"/>
                    </CheckButton>

                    <CheckButton name="$parentShowInCombat" hidden="false">
                        <Size>
                            <AbsDimension x="20" y="20"/>
                        </Size>
                        <Anchors>
                            <Anchor point="TOPLEFT">
                                <Offset>
                                    <AbsDimension x="10" y="-70"/>
                                </Offset>
                            </Anchor>
                        </Anchors>
                        <Layers>
                            <Layer level="ARTWORK">
                                <FontString name="$parentLabel" inherits="GameFontNormal"
                                            text="Always Show in Combat">
                                    <Anchors>
                                        <Anchor point="LEFT" relativePoint="RIGHT">
                                            <Offset>
                                                <AbsDimension x="1" y="1"/>
                                            </Offset>
                                        </Anchor>
                                    </Anchors>
                                </FontString>
                            </Layer>
                        </Layers>
                        <Frames>
                        </Frames>
                        <Scripts>
                            <OnClick>
                                TWTChangeSetting_OnClick(this:GetName(), this:GetChecked(), 'showInCombat')
                            </OnClick>
                        </Scripts>
                        <NormalTexture file="Interface\Buttons\UI-CheckBox-Up"/>
                        <PushedTexture file="Interface\Buttons\UI-CheckBox-Down"/>
                        <HighlightTexture file="Interface\Buttons\UI-CheckBox-Highlight" alphaMode="ADD"/>
                        <CheckedTexture file="Interface\Buttons\UI-CheckBox-Check"/>
                        <DisabledCheckedTexture file="Interface\Buttons\UI-CheckBox-Check-Disabled"/>
                    </CheckButton>

                </Frames>
                <Scripts>
                    <OnLoad>
                        this:RegisterForDrag("LeftButton");
                        this:SetMovable(1);
                        this:SetUserPlaced(true);
                    </OnLoad>
                    <OnDragStart>
                        this:StartMoving();
                        this.isMoving = true;
                    </OnDragStart>
                    <OnDragStop>
                        this:StopMovingOrSizing();
                        this.isMoving = false;
                    </OnDragStop>
                </Scripts>
            </Frame>

        </Frames>
    </Frame>

    <Frame name="TWThreatDisplayTarget" hidden="true">
        <Size>
            <AbsDimension x="232" y="100"/>
        </Size>
        <Anchors>
            <Anchor point="TOPLEFT" relativeTo="TargetFrame">
                <Offset>
                    <AbsDimension x="1" y="0"/>
                </Offset>
            </Anchor>
        </Anchors>
        <Layers>
            <Layer level="BACKGROUND">
                <Texture name="$parentGlow">
                    <Size>
                        <AbsDimension x="256" y="128"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="-11" y="13"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="BORDER">
                <Texture name="$parentNumericBG"
                         file="Interface\TargetingFrame\UI-StatusBar">
                    <Size>
                        <AbsDimension x="36" y="13"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="44" y="-7"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
            </Layer>
            <Layer level="ARTWORK">
                <Texture name="$parentNumericBorder"
                         file="Interface\addons\TWThreat\images\numericthreatborder">
                    <Size>
                        <AbsDimension x="64" y="32"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="38" y="-3"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </Texture>
                <FontString name="$parentPerc"
                            inherits="GameFontHighlightSmall" text="87%">
                    <Size>
                        <AbsDimension x="64" y="32"/>
                    </Size>
                    <Anchors>
                        <Anchor point="TOPLEFT">
                            <Offset>
                                <AbsDimension x="31" y="3"/>
                            </Offset>
                        </Anchor>
                    </Anchors>
                </FontString>
            </Layer>
        </Layers>
    </Frame>

</Ui>
